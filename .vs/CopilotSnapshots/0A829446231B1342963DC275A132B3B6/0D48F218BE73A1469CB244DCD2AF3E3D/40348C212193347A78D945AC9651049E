#include "game.h"
#include "surface.h"
#include "character.h"
#include "items.h"
#include "level creation.h"
#define WIN32_LEAN_AND_MEAN
#include <windows.h>

namespace Tmpl8
{
    void Game::Init() {
        InitLevel();
        InitItems();
        InitCharacter();
    }
    void Game::Shutdown() {
        ShutdownCharacter();
        ShutdownItems();
        ShutdownLevel();
    }

    void Game::Tick(float deltaTime)
    {
        screen->Clear(0);
        DrawLevel(screen);
        UpdateAndDrawCharacter(screen);
        UpdateAndDrawItems(screen);
    }
};